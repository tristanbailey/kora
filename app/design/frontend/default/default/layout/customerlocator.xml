<layout>

    <default>
        <reference name="head">
            <action method="addCss"><name>css/customerlocator/styles.css</name></action>
        </reference>
    </default>

    <catalog_category_default>
        <reference name="left">
            <block type="customerlocator/customer_address" name="customer.address" after="currency" template="customerlocator/customer/address.phtml"/>
        </reference>
    </catalog_category_default>
    
    <catalog_category_layered>
        <reference name="left">
            <block type="customerlocator/customer_address" name="customer.address" after="currency" template="customerlocator/customer/address.phtml"/>
        </reference>
    </catalog_category_layered>
    
    <catalogsearch_result_index>
        <reference name="left">
            <block type="customerlocator/customer_address" name="customer.address" after="currency" template="customerlocator/customer/address.phtml"/>
        </reference>
    </catalogsearch_result_index>
    
    <catalogsearch_advanced_index>
        <reference name="left">
            <block type="customerlocator/customer_address" name="customer.address" after="right_currency" template="customerlocator/customer/address.phtml"/>
        </reference>
    </catalogsearch_advanced_index>
    
    <catalogsearch_advanced_result>
        <reference name="right">
            <block type="customerlocator/customer_address" name="customer.address" after="right_currency" template="customerlocator/customer/address.phtml"/>
        </reference>
    </catalogsearch_advanced_result>
</layout>